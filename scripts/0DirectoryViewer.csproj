<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<!-- Prevent the project from attempting any compilation -->
		<TargetFramework>netstandard2.0</TargetFramework>
		<DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
		<EnableDefaultCompileItems>false</EnableDefaultCompileItems>

		<!-- Prevent build from running -->
		<SkipCompilerExecution>true</SkipCompilerExecution>
		<NoBuild>true</NoBuild>

		<!-- NEW: prevent NuGet restore to avoid NETSDK1005 -->
		<RestoreProjectStyle>None</RestoreProjectStyle>

		<!-- Visual Studio friendliness -->
		<IncludeBuildOutput>false</IncludeBuildOutput>
	</PropertyGroup>

	<!-- Remove all real Compile items -->
	<ItemGroup>
		<Compile Remove="**\*.cs" />
	</ItemGroup>
	
	
	<!-- Do not display directories and files form project root directory: 
	<ItemGroup>
		<None Remove="**\*.*" >
		</None>
	</ItemGroup>
	-->

	<!-- Mirror real direectories: -->
	<!-- /scripts, mapped to scripts/, which is also the project's root directory: -->
	<ItemGroup>
		<None Include="..\scripts\**\*.*">
			<Link>scripts\%(RecursiveDir)%(Filename)%(Extension)</Link>
		</None>
		<!--
		<None Remove="..\scripts\bin\**\*.*" />
		<None Remove="..\scripts\obj\**\*.*" />
		-->
		<None Remove="..\scripts\.vs\**\*.*" />
	</ItemGroup>

	<!-- Override all build-related targets so they do nothing -->
	<Target Name="CoreCompile" />
	<Target Name="PrepareForBuild" />
	<Target Name="Compile" />
	<Target Name="Build" />
	<Target Name="Restore" />
	<Target Name="ResolveReferences" />
	<Target Name="GenerateTargetFrameworkMonikerAttribute" />
	<Target Name="GenerateAssemblyInfo" />
</Project>
